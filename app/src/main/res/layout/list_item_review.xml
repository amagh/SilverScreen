<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_horizontal_margin"
        android:paddingStart="@dimen/text_horizontal_margin"
        android:paddingRight="@dimen/text_horizontal_margin"
        android:paddingEnd="@dimen/text_horizontal_margin"
        tools:background="@android:color/black">

        <TextView
            android:id="@+id/list_review_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="9"
            android:textColor="@android:color/white"
            tools:text="@string/list_review_content_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/list_review_continue_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textStyle="italic|bold"
            tools:text="@string/list_review_continue_text"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/list_review_content_tv"
            app:layout_constraintBottom_toTopOf="@+id/list_review_author_tv"
            app:layout_constraintLeft_toLeftOf="@+id/list_review_content_tv" />

        <TextView
            android:id="@+id/list_review_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginTop="@dimen/text_vertical_margin"
            tools:text="@string/list_review_author_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_review_content_tv"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>
