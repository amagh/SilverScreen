<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_review_chevron_icon_size"
        android:layout_marginStart="@dimen/detail_review_chevron_icon_size"
        android:layout_marginRight="@dimen/detail_review_chevron_icon_size"
        android:layout_marginEnd="@dimen/detail_review_chevron_icon_size"
        tools:background="@android:color/black">

        <TextView
            android:id="@+id/list_review_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="9"
            android:textColor="@android:color/white"
            tools:text="@string/list_review_content_text"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/list_review_continue_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="italic|bold"
            android:text="@string/list_review_continue_text"
            android:layout_marginTop="@dimen/text_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/list_review_content_tv"
            app:layout_constraintLeft_toLeftOf="@+id/list_review_content_tv" />

        <TextView
            android:id="@+id/list_review_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Body2"
            tools:text="@string/list_review_author_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/text_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/list_review_continue_tv"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

</layout>
