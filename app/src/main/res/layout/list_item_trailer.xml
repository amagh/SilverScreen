            <!--app:layout_constraintRight_toRightOf="@+id/list_trailer_thumb_iv"-->
            <!--app:layout_constraintLeft_toLeftOf="@+id/list_trailer_thumb_iv"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/list_trailer_title_tv"-->
            <!--app:layout_constraintTop_toTopOf="@+id/list_trailer_title_tv" />-->

        <TextView
            android:id="@+id/list_trailer_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Trailer"
            android:gravity="center_horizontal"
            style="@style/CaptionText"
            app:layout_constraintTop_toBottomOf="@+id/list_trailer_thumb_iv"
            app:layout_constraintRight_toRightOf="@+id/list_trailer_thumb_iv"
            app:layout_constraintLeft_toLeftOf="@+id/list_trailer_thumb_iv" />

    </android.support.constraint.ConstraintLayout>
</layout>
